<Window x:Class="EstadoResultadoWPF.WEstadoResultado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="EstadoResultado"
        Title="Procesamiento de Estado Resultado" Height="540.594" Width="649.97"
        >
    <Grid Margin="0,0,15,7">
        <Menu HorizontalAlignment="Left" Margin="0,0,0,419">
            <MenuItem x:Name="mnData" Header="Data" >
                <MenuItem x:Name="mnItem" Header="Items" HorizontalAlignment="Left" Click="mnItem_Click"/>
                <MenuItem x:Name="mnLineas" Header="Líneas de Estado Resultado" HorizontalAlignment="Left"/>
                <MenuItem x:Name="mnAreas" Header="Areas" HorizontalAlignment="Left"/>
            </MenuItem>
            <MenuItem x:Name="mnConfig" Header="Configuración"/>
        </Menu>
        <TextBox x:Name="PathIn" HorizontalAlignment="Left" Height="28" Margin="120,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="490" IsEnabled="False"/>
        <Button x:Name="PathInBtn" Content="Ruta Entrada" Click="btnPathIn_Click" HorizontalAlignment="Left" Height="28" Margin="10,48,0,0" VerticalAlignment="Top" Width="99"/>
        <TextBox x:Name="PathOut" HorizontalAlignment="Left" Height="28" Margin="120,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="490" IsEnabled="False"/>
        <Button x:Name="PathOutBtn" Content="Ruta Salida" Click="btnPathOut_Click" HorizontalAlignment="Left" Height="28" Margin="10,85,0,0" VerticalAlignment="Top" Width="99"/>
        <ListBox x:Name="ListInputFiles" HorizontalAlignment="Left" Margin="10,194,0,10" Width="457" SelectionMode="Multiple" />
        <Button Content="Procesar" x:Name="ProcBtn" Click="btnProc_Click" HorizontalAlignment="Left" Height="32" Margin="10,158,0,0" VerticalAlignment="Top" Width="457"/>
        <TextBox x:Name="FileOut" HorizontalAlignment="Left" Height="28" Margin="120,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="490" IsEnabled="False"/>
        <Label Content="Archivo de Salida" HorizontalAlignment="Left" Height="28" Margin="10,121,0,0" VerticalAlignment="Top" Width="105"/>
    </Grid>
</Window>
